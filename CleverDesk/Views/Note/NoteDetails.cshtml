@model CleverDesk.Models.Note

@{
    ViewData["Title"] = "Note: " + Model.Title;
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">@Model.Title</h2>
        <p class="text-muted">Notebook: @Model.Notebook?.Title</p>
    </div>

    <div class="card shadow-sm rounded-4 p-4">
        <div class="note-content" style="white-space: pre-wrap;">
            @Model.Content
        </div>
    </div>

    <div class="mt-4 text-end">
        <a href="@Url.Action("EditNote", "Note", new { noteId = Model.Id })" class="btn btn-outline-secondary me-2">Edit</a>
        <a href="@Url.Action("NoteBookDetails", "Note", new { notebookId = Model.NotebookId })" class="btn btn-primary">Back to Notebook</a>
    </div>
</div>
