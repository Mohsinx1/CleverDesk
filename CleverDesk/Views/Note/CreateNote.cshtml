@model CleverDesk.Models.Note

@{
    ViewData["Title"] = "Create Note";
}

<div class="container mt-4">
    <h3 class="text-center text-primary mb-4">Write a New Note in @TempData["NoteBookTitle"]</h3>

    <form asp-action="CreateNote" method="post">
        <input type="hidden" asp-for="NotebookId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="8" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save Note</button>
    </form>
</div>
